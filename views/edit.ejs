<%- include("./partials/header") %> 
<div id="" class="ui main text container segment">
    <div class="ui huge header">Edit <%= thot.title %></div>
    <form class="ui form " action="/thots/<%= thot._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="thot[title]" required value="<%= thot.title %> ">
        </div>
        <div  class="field">
            <label>Image</label>
            <input type="text" name="thot[image]" required value="<%= thot.image %>">
        </div>
        <div class="field">
            <label>Your Thots Ybout This</label>
            <textarea name="thot[body]" required ><%= thot.body %></textarea>
        </div>
        <input id="submit" class="ui basic standard button" type="submit">
    </form>
</div>
<%- include("./partials/footer") %> 